generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String   @db.Text
  cpf        String   @unique @db.VarChar(14)
  rg         String   @unique @db.VarChar(10)
  adress     Json
  email      String   @unique
  phone      String   @unique @db.VarChar(20)
  employeeId String   @unique @db.VarChar(6)
  password   String   @unique @db.VarChar(15)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model Agency {
  id     Int    @id @default(autoincrement())
  name   String @db.Text
  cnpj   String @unique @db.VarChar(14)
  adress Json
  email  String @unique
  phone  String @unique @db.VarChar(20)

  busNetworks BusNetwork[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("agency")
}

model BusNetwork {
  id     Int    @id @default(autoincrement())
  name   String @db.Text
  cnpj   String @unique @db.VarChar(14)
  adress Json
  email  String @unique
  phone  String @unique @db.VarChar(20)

  companies Company[]

  agencyId Int
  agency   Agency @relation(fields: [agencyId], references: [id])

  zoneId Int  @unique
  zone   Zone @relation(fields: [zoneId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("busNeworks")
}

model Company {
  id     Int    @id @default(autoincrement())
  name   String @db.Text
  cnpj   String @unique @db.VarChar(14)
  adress Json
  email  String @unique
  phone  String @unique @db.VarChar(20)

  vehicles Vehicle[]
  busLines BusLine[]

  busNetworkId Int
  busNetwork   BusNetwork @relation(fields: [busNetworkId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id                Int    @id @default(autoincrement())
  manufacturer      String
  model             String
  prefix            String @unique
  manufacturingYear Int    @db.Year
  capacity          Int

  companyId Int
  companies Company @relation(fields: [companyId], references: [id])

  busLine BusLine?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("vehicles")
}

model BusLine {
  id        Int    @id @default(autoincrement())
  code      Int @unique
  name      String
  timeStart String @db.VarChar(5)
  timeEnd   String @db.VarChar(5)
  ridership Int

  vehicleId Int     @unique
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])

  companyId Int
  company   Company @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("busLines")
}

model Zone {
  id   Int    @id @default(autoincrement())
  name String
  code String @unique @db.VarChar(1)

  busNetwork BusNetwork?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("zones")
}
